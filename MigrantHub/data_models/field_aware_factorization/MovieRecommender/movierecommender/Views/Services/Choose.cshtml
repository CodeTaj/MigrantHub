@using servicerecommender.Models
@model IEnumerable<Service>
@{
    ViewBag.Title = "Choose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><span class="glyphicon glyphicon-film"></span> Service Recommender</h1>

<h3>Pick the service you best liked in the past?</h3>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">@service.ServiceName</h3>
                    <a href="@Url.Action("Recommend", "Services", new { id = service.ServiceID })" class="btn btn-primary">Choose me</a>
                </div>
            </div>
        </div>
    }
</div>

<hr />
<div class="form-row">
    <button type="button" class="btn btn-info" id="select" onclick="location.href='@Url.Action("Choose", "Services")'">
        <span class="glyphicon glyphicon-ok"></span> Recommend Services
    </button>
</div>


