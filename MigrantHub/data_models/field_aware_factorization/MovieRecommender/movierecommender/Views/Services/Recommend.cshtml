@using servicerecommender.Models
@model Profile
@{
    ViewBag.Title = "Recommend";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Profile profile = Model;
    var WatchedService = (List<Service>)ViewData["watchedservices"];
    var ServiceRatings = (List<Tuple<int, float>>)ViewData["ratings"];
    var TrendingService = (List<Service>)ViewData["trendingservices"];
}
<div class="row">
    <div class="col-sm-9">

        <h1><span class="glyphicon glyphicon-film"></span> Service Recommender</h1>
    </div>

    <div class="col-sm-3">
        <img src="~/images/@profile.ProfileImageName" width="50" height="50" align="bottom" class="img-rounded" title="@profile.ProfileName profile" />
        <h4> @profile.ProfileName </h4>
    </div>
</div>
<hr />

<br />
<h3 style="color:brown"><b>Your Recently Watched Services</h3>
<div class="row">
    @foreach (var service in WatchedService)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">@service.ServiceName</h3>
                    @{
                        bool thumbsup = false;
                        foreach (Tuple<int, int> tuple in profile.ProfileServiceRatings)
                        {
                            if (tuple.Item1 == service.ServiceID)
                            {
                                if (tuple.Item2 >= 4)
                                {
                                    thumbsup = true;
                                    break;
                                }
                            }
                        }
                    }

                    @if (thumbsup)
                    {
                        <span class="glyphicon glyphicon-thumbs-up" />
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-thumbs-down" />
                    }
                    <a href="@Url.Action("Watch", "Services")" class="btn-xs btn-primary">Watch Again</a>
                </div>
            </div>
        </div>
    }
</div>

<hr />
<h3 style="color:brown"><b>All-Time Top Box-Office services (Recommended)</h3>
<div class="row">
    @foreach (var service in TrendingService)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">@service.ServiceName</h3>
                    @{
                        foreach (Tuple<int, float> tuple in ServiceRatings)
                        {
                            if (tuple.Item1 == service.ServiceID)
                            {

                                var formatted = tuple.Item2.ToString("0.##\\%");
                                <span class="glyphicon glyphicon-fire"></span>@formatted;
                            }
                        }
                    }
                    <a href="@Url.Action("Watch", "Services")" class="btn-xs btn-primary">Play Service</a>
                </div>
            </div>
        </div>
    }
</div>
<br />
<hr />
<button type="button" class="btn breadcrumb" id="select" onclick="location.href='@Url.Action("Recommend", "Services", new {id = profile.ProfileID})'">
    <span class="glyphicon glyphicon-fire"></span> Recommended
</button>
<button type="button" class="btn breadcrumb" id="select" onclick="location.href='@Url.Action("Profiles", "Services")'">
    <span class="glyphicon glyphicon-dashboard"></span> Switch Profiles
</button>
